<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context="net.ko_kr.weatherdictionary.MainActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="160dp"
        android:layout_gravity="center_horizontal">

        <Button
            android:layout_width="130sp"
            android:layout_height="130sp"
            android:background="@drawable/water"
            android:textColor="#333333"
            android:textStyle="bold"
            android:id="@+id/btnWater"
            android:gravity="bottom|center"
            android:paddingBottom="10sp"
            android:text="물현상"
            android:textSize="20sp">
        </Button>

        <Button
            android:layout_width="130sp"
            android:layout_height="130sp"
            android:background="@drawable/dust"
            android:textColor="#333333"
            android:textStyle="bold"
            android:id="@+id/btnDust"
            android:gravity="bottom|center"
            android:paddingBottom="10sp"
            android:text="먼지현상"
            android:textSize="20sp"></Button>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"></LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="160dp"
        android:layout_gravity="center_horizontal">

        <Button
            android:layout_width="130sp"
            android:layout_height="130sp"
            android:background="@drawable/sun"
            android:textColor="#333333"
            android:textStyle="bold"
            android:id="@+id/btnSun"
            android:gravity="bottom|center"
            android:paddingBottom="10sp"
            android:text="빛현상"
            android:textSize="20sp">
        </Button>

        <Button
            android:layout_width="130sp"
            android:layout_height="130sp"
            android:background="@drawable/spark"
            android:textColor="#333333"
            android:textStyle="bold"
            android:id="@+id/btnSpark"
            android:gravity="bottom|center"
            android:paddingBottom="10sp"
            android:text="전기현상"
            android:textSize="20sp"></Button>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="160dp"
        android:layout_gravity="center_horizontal">

        <Button
            android:layout_width="130sp"
            android:layout_height="130sp"
            android:background="@drawable/unknown"
            android:textColor="#333333"
            android:textStyle="bold"
            android:id="@+id/btnUnknown"
            android:gravity="bottom|center"
            android:paddingBottom="10sp"
            android:text="기타현상"
            android:textSize="20sp">
        </Button>

        <Button
            android:layout_width="130sp"
            android:layout_height="130sp"
            android:background="@drawable/info"
            android:textColor="#333333"
            android:textStyle="bold"
            android:id="@+id/btnInfo"
            android:gravity="bottom|center"
            android:paddingBottom="10sp"
            android:text="개발정보"
            android:textSize="20sp"></Button>
    </LinearLayout>

</LinearLayout>
